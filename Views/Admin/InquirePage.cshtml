@using System.Configuration;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.title = "Inquire Page";

    Core.Entities.Page page = ViewBag.page;
}


        <h3>Edit Inquire Page</h3>
        <form action="@Url.Action("SaveInquirePage", "Admin")" method="post">
            <input type="hidden" name="Id" value="@page.Id" />
            <div class="form-group">
                <h4>Header Paragraph</h4>

                    <textarea required class="form-control" name="Paragraph1" id="paragraph1">@page.Paragraph1</textarea>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Header Background</h4>
                    <div class="form-group">
                        <input type="file" id="background1" />
                        <span class="material-input"></span>
                    </div>
                    <input type="hidden" name="BackgroundImage1" value="@(!string.IsNullOrEmpty(page.BackgroundImage1) ? page.BackgroundImage1 : "")" />
                    <input type="hidden" name="BackgroundOriginalName1" value="@(!string.IsNullOrEmpty(page.BackgroundOriginalName1) ? page.BackgroundOriginalName1 : "")" />
                    <div id="background1-img">
                        @if (!string.IsNullOrEmpty(page.BackgroundImage1))
                        {
                            <img src="@(page.BackgroundImage1Url)" />
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <h4>About Paragraph</h4>
 
                    <textarea required class="form-control" name="Paragraph2" id="paragraph2">@page.Paragraph2</textarea>

            </div>
            <div class="form-group">
                <h4>Careers Paragraph</h4>
  
                    <textarea required class="form-control" name="Paragraph3" id="paragraph3">@page.Paragraph3</textarea>

            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Careers Email</h4>
                    <div class="form-group">
                        <input required type="email" id="email1" name="Email1" class="form-control" value="@page.Email1" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
           
            <div class="form-group">
                <h4>Franchise Paragraph</h4>

                    <textarea required class="form-control" name="Paragraph4" id="paragraph4">@page.Paragraph4</textarea>

            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Franchise Email</h4>
                    <div class="form-group">
                        <input required type="email" id="email2" name="Email2" class="form-control" value="@page.Email2" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Franchise Application Form<span id="file-name">@(!string.IsNullOrEmpty(page.File) ? (" - " + page.FileOriginalName) : "")</span></h4>
                    <div class="form-group">
                        <input type="file" id="app-form" accept=".pdf,application/pdf" />
                        <span class="material-input"></span>
                    </div>
                    <input type="hidden" name="File" value="@(!string.IsNullOrEmpty(page.File) ? page.File : "")" />
                    <input type="hidden" name="FileOriginalName" value="@(!string.IsNullOrEmpty(page.FileOriginalName) ? page.FileOriginalName : "")" />
                   
                </div>
            </div>
           
            <div class="form-group">
                <h4>Customer Care Paragraph</h4>
              
                    <textarea required class="form-control" name="Paragraph5" id="paragraph5">@page.Paragraph5</textarea>
             
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Customer Care Email</h4>
                    <div class="form-group">
                        <input required type="email" id="email3" name="Email3" class="form-control" value="@page.Email3" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
         
            <div class="clearfix">
                <div class="btn-group pull-right">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>

<script type="text/javascript" src="@Url.Content("~/Content/js/ckeditor/ckeditor.js")"></script>
<script type="text/javascript">
    $(document).ready(function () {
        setFileUploader("#background1", "@Url.Action("SoloUpload", "Image")", "BackgroundImage1", "BackgroundOriginalName1", "#background1-img", false);
        setInquireFormUploader("#app-form", "@Url.Action("AppFormUpload", "Image")", "File", "FileOriginalName", "#file-img", false);

        CKEDITOR.replace("paragraph1");
        CKEDITOR.replace("paragraph2");
        CKEDITOR.replace("paragraph3");
        CKEDITOR.replace("paragraph4");
        CKEDITOR.replace("paragraph5");
    });
</script>