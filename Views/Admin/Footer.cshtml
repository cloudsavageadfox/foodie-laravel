@using System.Configuration;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.title = "Footer";

    Core.Entities.Page page = ViewBag.page;
}


        <h3>Edit Footer</h3>
        <form action="@Url.Action("SaveFooter", "Admin")" method="post">
            <input type="hidden" name="Id" value="@page.Id" />
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Main Office Address</h4>
                    <div class="form-group">
                        <textarea required class="form-control" name="Paragraph1" id="paragraph1">@page.Paragraph1</textarea>
               
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Email</h4>
                    <div class="form-group">
                        <input type="email" required class="form-control" name="Email1" id="email1" value="@page.Email1" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Facebook Link</h4>
                    <div class="form-group">
                        <input required class="form-control" name="FacebookLink" placeholder="http://www.example.com" id="facebook" value="@page.FacebookLink" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Twitter Link</h4>
                    <div class="form-group">
                        <input required class="form-control" placeholder="http://www.example.com" name="TwitterLink" id="twitter" value="@page.TwitterLink" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Instagram Link</h4>
                    <div class="form-group">
                        <input required class="form-control" placeholder="http://www.example.com" name="InstagramLink" id="instagram" value="@page.InstagramLink" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Website Link</h4>
                    <div class="form-group">
                        <input required class="form-control" placeholder="http://www.example.com" name="WebsiteLink" id="website" value="@page.WebsiteLink" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
           
            <div class="clearfix">
                <div class="btn-group pull-right">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>


<script type="text/javascript">
    $(document).ready(function () {
        setFileUploader("#background1", "@Url.Action("SoloUpload", "Image")", "BackgroundImage1", "BackgroundOriginalName1", "#background1-img", false);
    });
</script>