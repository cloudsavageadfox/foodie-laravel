@using System.Configuration;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.title = "Add Award";
}


        <h3>Add Award</h3>
        <form action="@Url.Action("AddAward", "Admin")" method="post" onsubmit="return validateForm();">
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Title</h4>
                    <div class="form-group">
                        <input required type="text" class="form-control" id="title" name="Title" />
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Paragraph</h4>
                    <div class="form-group">
                        <textarea required class="form-control" name="Paragraph" id="paragraph"></textarea>
                        <span class="material-input"></span>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h4 class="card-title">Image</h4>
                    <div class="form-group">
                        <input type="file" id="image" required />
                        <span class="material-input"></span>
                    </div>
                    <input type="hidden" name="Image" />
                    <input type="hidden" name="ImageOriginalName" />
                    <div id="image-img">
                    </div>
                </div>
            </div>
          
            <div class="clearfix">
                <div class="btn-group pull-right">
                    <a href="@Url.Action("AwardsList", "Admin")" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>

<script type="text/javascript">
    function validateForm() {
        if ($("#file").val() == "" || $("input[name=Image]").val() == "" ||
            $("input[name=ImageOriginalName]").val() == "") {
            alert("Please add the image!");

            return false;
        }

        return true;
    }

    $(document).ready(function () {
        setFileUploader("#image", "@Url.Action("SoloUpload", "Image")", "Image", "ImageOriginalName", "#image-img", false);
    });
</script>